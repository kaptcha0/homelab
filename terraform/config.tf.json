{
  "data": {
    "sops_file": {
      "secrets": {
        "source_file": "../secrets/terraform-secrets.yaml"
      }
    }
  },
  "provider": {
    "proxmox": {
      "api_token": "${data.sops_file.secrets.data[\"pm_api_token_id\"]}=${data.sops_file.secrets.data[\"pm_api_token_secret\"]}",
      "endpoint": "${var.proxmox_api_url}",
      "insecure": true
    },
    "routeros": {
      "hosturl": "${var.routeros_api_url}",
      "insecure": true,
      "password": "${data.sops_file.secrets.data[\"routeros_api_password\"]}",
      "username": "${data.sops_file.secrets.data[\"routeros_api_username\"]}"
    }
  },
  "terraform": {
    "required_providers": {
      "proxmox": {
        "source": "bpg/proxmox",
        "version": "~> 0.81.0"
      },
      "routeros": {
        "source": "terraform-routeros/routeros",
        "version": "~> 1.86.0"
      },
      "sops": {
        "source": "carlpett/sops",
        "version": "~> 1.2.1"
      }
    }
  },
  "variable": {
    "proxmox_api_url": {
      "type": "string"
    },
    "routeros_api_url": {
      "type": "string"
    }
  }
}
